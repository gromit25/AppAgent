<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.redeye.appagent</groupId>
  <artifactId>appagent</artifactId>
  <version>0.1</version>
  
  <properties>
  
    <!--
       charater set 설정
       설정하지 않으면 Warning 출력됨
    -->
    <project.build.sourceEncoding>utf-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>utf-8</project.reporting.outputEncoding>

    <!--
       배포될 위치 설정 
    -->
    <deploy.target.dir>C:/apps/AppAgent</deploy.target.dir>

  </properties>
  
 <dependencies>
  
    <dependency>
      <groupId>org.ow2.asm</groupId>
      <artifactId>asm</artifactId>
      <version>9.7.1</version>
    </dependency>
    
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.28</version>
      <scope>provided</scope>
    </dependency>
    
	<dependency>
		<groupId>com.redeye</groupId>
		<artifactId>TextGen</artifactId>
		<version>0.1</version>
		<scope>system</scope>
		<systemPath>C:/apps/textgen/TextGen-0.1.jar</systemPath>
	</dependency>

    <dependency>
      <groupId>jakarta.servlet</groupId>
      <artifactId>jakarta.servlet-api</artifactId>
      <version>6.1.0</version>
      <scope>provided</scope>
    </dependency>
    
  </dependencies>
  
  <build>
  <plugins>
    
    <plugin>
      <artifactId>maven-compiler-plugin</artifactId>
      <version>3.7.0</version>
      <configuration>
        <source>1.8</source>
        <target>1.8</target>
      </configuration>
    </plugin>
      
    <plugin>
      <artifactId>maven-clean-plugin</artifactId>
      <version>2.5</version>
      <executions>
        <execution>
          <id>clean-target</id>
          <phase>clean</phase>
          <goals>
            <goal>clean</goal>
          </goals>
          <configuration>
            <filesets>
              <fileset>
                <directory>${deploy.target.dir}</directory>
                <includes>
                  <include>**/*</include>
                </includes>
              </fileset>
            </filesets>
          </configuration>
        </execution>
      </executions>
    </plugin>
    
    <!-- jar 파일 생성 -->
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-jar-plugin</artifactId>
      <version>3.1.1</version>
      <configuration>
        <outputDirectory>${deploy.target.dir}</outputDirectory>
        <archive>
           <manifest>
             <addClasspath>true</addClasspath>
             <classpathPrefix>lib/</classpathPrefix>
           </manifest>
           <manifestEntries>
             <Premain-Class>com.redeye.appagent.AppAgent</Premain-Class>
             <Can-Redefine-Classes>true</Can-Redefine-Classes>
             <Can-Retransform-Classes>true</Can-Retransform-Classes>
             <Class-Path>lib/TextGen-0.1.jar</Class-Path>
           </manifestEntries>
        </archive>
      </configuration>
    </plugin>
    
    <!-- library jar 파일 복사  -->
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-dependency-plugin</artifactId>
      <executions>
        <execution>
          <id>copy-dependencies</id>
          <phase>install</phase>
          <goals>
            <goal>copy-dependencies</goal>
          </goals>
          <configuration>
            <outputDirectory>
                ${deploy.target.dir}/lib
            </outputDirectory>
            <!--
                lombok과 사용하지 않는 jar파일들은 복사하지 않음
                lombok은 프로그램 개발시에만 필요함
            -->
            <excludeArtifactIds>
                lombok, junit
            </excludeArtifactIds>
          </configuration>
        </execution>
      </executions>
    </plugin>
    
    <!-- resource 파일 복사  -->
    <plugin>
      <artifactId>maven-resources-plugin</artifactId>
      <version>3.1.0</version>
      <executions>
      <!-- config 파일 복사  -->
        <execution>
          <id>copy-resource</id>
          <phase>install</phase>
          <goals>
            <goal>copy-resources</goal>
          </goals>
          <configuration>
            <outputDirectory>${deploy.target.dir}/resources</outputDirectory>
            <resources>
              <resource>
                <directory>src/main/resources</directory>
              </resource>
            </resources>
          </configuration>
        </execution>
      </executions>
    </plugin>
    
  </plugins>
  </build>
 
</project>